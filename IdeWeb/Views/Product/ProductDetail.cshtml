<div class="row">
    <div class="col-xl-5">
        <div class="product-detail">
            <div class="row">
             

                <div class="col-9">
                    <div class="tab-content position-relative" id="v-pills-tabContent">

                   
                        <div class="tab-pane fade show active" id="product-1" role="tabpanel" aria-labelledby="product-1-tab">
                            <div class="product-img">
                                <img src="/images/product/@Model.Picture" alt="" class="img-fluid mx-auto d-block" data-zoom="/images/product/@Model.Picture">
                            </div>
                        </div>
                       
                    </div>
                    <div class="row text-center mt-2">
                        <div class="col-sm-6">
                            <div class="d-grid">
                              
                            </div>
                        </div>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-7">
        <div class="mt-4 mt-xl-3 ps-xl-4">

            <h5 class="font-size-14">@Model.Name.Split(" ")[0]</h5>
            <h4 class="font-size-20 mb-3">@Model.Name</h4>

            <div class="text-muted">
                <span class="badge bg-success font-size-14 me-1"><i class="mdi mdi-star"></i> 5</span> 
            </div>

            <h5 class="mt-4 pt-2">@Model.Price TL <span class="text-danger font-size-14 ms-2"></span></h5>

            <p class="mt-4 text-muted"><span>Açıklama:</span>@Model.Description</p>
            <p class="mt-4 text-muted"><span>Ürün Barkodu:</span>@Model.Barcode</p>
            <p class="mt-4 text-muted"><span>Ürün Numarası:</span>@Model.ProductNo</p>

            <button onclick="addBasket(@Model.Id)" type="button" class="btn btn-primary waves-effect waves-light mt-2 me-1">
                <i class="uil uil-shopping-cart-alt me-2"></i> Sepete Ekle !
            </button>

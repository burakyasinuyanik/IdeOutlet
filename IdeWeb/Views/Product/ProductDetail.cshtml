@section Scripts{
    <script>
        function addBasket(id) {
            $.ajax({
                type: "post",
                url: "/ShoppingBasket/ProductAdd/",
                data: {
                    mail: "@User.FindFirstValue(ClaimTypes.Name)",
                    id: id
                },
                success: function (res) {
                    if (res.result) {
                        toastr.success(res.message);

                    } else {
                        toastr.error(res.message);

                    }
                },
                error: function (res) {
                }
            })
        }
    </script>
}
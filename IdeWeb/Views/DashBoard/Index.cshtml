@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>

        $(document).ready(function(){

            totalOderChar();
            orderCaseAjax();
            totalCustomerAjax();
            orderProductCaseAjax();
            productCaseAjax();
           
            confirmationOrderProductCaseAjax();
            pendingOrderProductCaseAjax();
            annulmenOrderProductCaseAjax();
        });
        function totalOderChar(){
            $.ajax({
                type: "get",
                url: "/DashBoard/TotalOrder",
                success: function (res) {
                    orderChart(res);
                }
            })
        }
        function orderCaseAjax(){
            $.ajax({
                type:"get",
                url: "/DashBoard/OrderCase",
                success:function(res){
                    orderCase(res);
                }
            })
        }
        function orderProductCaseAjax() {
            $.ajax({
                type: "get",
                url: "/DashBoard/OrderProductCase",
                success: function (res) {
                    orderProductCase(res);
                }
            })
        }
        function totalCustomerAjax(){
            $.ajax({
                type:"get",
                url:"DashBoard/TotalCustomer",
                success:function(res){
                    totalCustomer(res);
                }
            })
        }
        function productCaseAjax(){
            $.ajax({
                type:"get",
                url: "/DashBoard/ProductCase",
                success:function(res){
                    productCase(res);
                }
            })
        }
        function confirmationOrderProductCaseAjax() {
            $.ajax({
                type: "get",
                url: "/DashBoard/ConfirmationOrderProductCase",
                success: function (res) {
                    totalConfirmationOrderProduct(res);
                }
            })
        }
        function pendingOrderProductCaseAjax() {
            $.ajax({
                type: "get",
                url: "/DashBoard/PendingOrderProductCase",
                success: function (res) {
                    totalPendingOrderProduct(res);
                }
            })
        }
        function annulmenOrderProductCaseAjax() {
            $.ajax({
                type: "get",
                url: "/DashBoard/AnnulmentOrderProductCase",
                success: function (res) {
                    totalAnnulmentOrderProduct(res);
                }
            })
        }
        function productCase(res){
            var options = {
                series: [res.percentRemainingStock],
                chart: {
                    height: 255,
                    type: 'radialBar',
                    toolbar: {
                        show: true
                    }
                },
                plotOptions: {
                    radialBar: {
                        startAngle: -135,
                        endAngle: 225,
                        hollow: {
                            margin: 0,
                            size: '70%',
                            background: '#fff',
                            image: undefined,
                            imageOffsetX: 0,
                            imageOffsetY: 0,
                            position: 'front',
                            dropShadow: {
                                enabled: true,
                                top: 3,
                                left: 0,
                                blur: 4,
                                opacity: 0.24
                            }
                        },
                        track: {
                            background: '#fff',
                            strokeWidth: '67%',
                            margin: 0, // margin is in pixels
                            dropShadow: {
                                enabled: true,
                                top: -3,
                                left: 0,
                                blur: 4,
                                opacity: 0.35
                            }
                        },

                        dataLabels: {
                            show: true,
                            name: {
                                offsetY: -10,
                                show: true,
                                color: '#888',
                                fontSize: '17px'
                            },
                            value: {
                              
                                color: '#111',
                                fontSize: '36px',
                                show: true,
                            }
                        }
                    }
                },
                fill: {
                    type: 'gradient',
                    gradient: {
                        shade: 'dark',
                        type: 'horizontal',
                        shadeIntensity: 0.5,
                        gradientToColors: ['#ABE5A1'],
                        inverseColors: true,
                        opacityFrom: 1,
                        opacityTo: 1,
                        stops: [0, 100]
                    }
                },
                stroke: {
                    lineCap: 'round'
                },
                labels: ['Kalan Ürün'],
            };


            
            var chart = new ApexCharts(document.querySelector('#productCase'), options);
            chart.render();

        }
        function totalAnnulmentOrderProduct(res) {
            let date = [];
            let dateSales = [];
            let totalPrice = 0;

            res.map(function (item) {
                var a = `${item.dateModified.day}-${item.dateModified.month}-${item.dateModified.year}`
                dateSales.push(item.orderProductPrice);
                totalPrice += item.orderProductPrice;
                date.push(a);
            })

            var options = {
                chart: {
                    id: 'sparkline1',
                    
                    type: 'area',
                    height: 160,
                    sparkline: {
                        enabled: true
                    },
                },
                stroke: {
                    curve: 'straight'
                },
                fill: {
                    opacity: 1,
                },
                series: [{
                    name: 'Gün İçinde İptal Edilen Satış',
                    data: dateSales
                }],
                labels: date,
                yaxis: {
                    min: 0
                },
                xaxis: {
                    type: 'string',
                },
                colors: ['#DCE6EC'],
                title: {
                    text: totalPrice + " TL",
                    offsetX: 30,
                    style: {
                        fontSize: '24px',
                        cssClass: 'apexcharts-yaxis-title'
                    }
                },
                subtitle: {
                    text: 'Toplam İptal Statüsündeki Ürün Fiyatı',
                    offsetX: 30,

                }
            }

            var chart = new ApexCharts(document.querySelector("#totalAnnulmentOrderProduct"), options);
            chart.render();

        }

        function totalPendingOrderProduct(res) {
            let date = [];
            let dateSales = [];
            let totalPrice = 0;
           
            res.map(function (item) {
                var a = `${item.dateModified.day}-${item.dateModified.month}-${item.dateModified.year}`
                dateSales.push(item.orderProductPrice);
                totalPrice += item.orderProductPrice;
                date.push(a);
            })

            var options = {
                chart: {
                    id: 'sparkline1',
                   
                    type: 'area',
                    height: 160,
                    sparkline: {
                        enabled: true
                    },
                },
                stroke: {
                    curve: 'straight'
                },
                fill: {
                    opacity: 1,
                },
                series: [{
                    name: 'Gün İçinde Bekleyen Satış',
                    data: dateSales
                }],
                labels: date,
                yaxis: {
                    min: 0
                },
                xaxis: {
                    type: 'string',
                },
                colors: ['#DCE6EC'],
                title: {
                    text: totalPrice + " TL",
                    offsetX: 30,
                    style: {
                        fontSize: '24px',
                        cssClass: 'apexcharts-yaxis-title'
                    }
                },
                subtitle: {
                    text: 'Toplam Bekleyen Statüsündeki Ürün Fiyatı',
                    offsetX: 30,

                }
            }

            var chart = new ApexCharts(document.querySelector("#totalPendingOrderProduct"), options);
            chart.render();

        }

        function totalConfirmationOrderProduct(res){
                let date=[];
                let dateSales=[];
                let totalPrice=0;

                res.map(function(item){
                var a = `${item.dateModified.day}-${item.dateModified.month}-${item.dateModified.year}`
                dateSales.push(item.orderProductPrice);
                totalPrice += item.orderProductPrice;
                date.push(a);
                })
          
            var options = {
                chart: {
                    id: 'sparkline1',
                  
                    type: 'area',
                    height: 160,
                    sparkline: {
                        enabled: true
                    },
                },
                stroke: {
                    curve: 'straight'
                },
                fill: {
                    opacity: 1,
                },
                series: [{
                    name: 'Gün İçinde Onaylanan Satış',
                    data: dateSales
                }],
                labels: date,
                yaxis: {
                    min: 0
                },
                xaxis: {
                    type: 'string',
                },
                colors: ['#DCE6EC'],
                title: {
                    text: totalPrice+" TL",
                    offsetX: 30,
                    style: {
                        fontSize: '24px',
                        cssClass: 'apexcharts-yaxis-title'
                    }
                },
                subtitle: {
                    text: 'Toplam Onaylanan Ürün Fiyatı',
                    offsetX: 30,
                   
                }
            }

            var chart = new ApexCharts(document.querySelector("#totalConfirmationOrderProduct"), options);
            chart.render();

        }
        function totalCustomer(res){
            let customerTotal=0;
            let date = [];
            for(var item of res){
                customerTotal += item.customerCount;
                var a = item.customerCount;
                date.push(a);
            }
            var options = {
                chart: {
                    id: 'sparkline1',

                    type: 'line',
                    height: 140,
                    sparkline: {
                        enabled: true
                    },
                    group: 'sparklines'
                },
                series: [{
                    name: 'Kayıt Olan Müşteri Adeti',
                    data: date
                }],
                stroke: {
                    curve: 'smooth'
                },
                markers: {
                    size: 0
                },
                tooltip: {
                    fixed: {
                        enabled: true,
                        position: 'right'
                    },
                    x: {
                        show: false
                    }
                },
                title: {
                    text: customerTotal,
                    style: {
                        fontSize: '26px'
                    }
                },
                colors: ['#734CEA']
            }
            var chart = new ApexCharts(document.querySelector("#totalCustomer"), options);
            chart.render();

        }

        function orderProductCase(res) {
            let orderProductTypeName = [];
            let orderProductTypeCount = [];
            res.map(function (item) {
                orderProductTypeName.push(item.orderProductTypeName),
                    orderProductTypeCount.push(item.orderProductTypeCount)
            })

            var options = {
                series: orderProductTypeCount,
                chart: {
                    width: 350,
                    type: 'donut',
                    dropShadow: {
                        enabled: true,
                        color: '#111',
                        top: -1,
                        left: 3,
                        blur: 3,
                        opacity: 0.2
                    }
                },
                stroke: {
                    width: 0,
                },
                plotOptions: {
                    pie: {
                        donut: {
                            labels: {
                                show: true,

                                total: {

                                    showAlways: false,
                                    show: true
                                }
                            }

                        }
                    }
                },
                labels: orderProductTypeName,
                dataLabels: {
                    dropShadow: {
                        blur: 3,
                        opacity: 0.8
                    }
                },
                fill: {
                    type: 'pattern',
                    opacity: 1,
                    pattern: {
                        enabled: true,
                        style: ['verticalLines', 'squares', 'horizontalLines', 'circles', 'slantedLines'],
                    },
                },
                states: {
                    hover: {
                        filter: 'none'
                    }
                },
                theme: {
                    palette: 'palette2'
                },
                title: {
                    text: "Tüm Siparişlerin Ürün Durum Bilgisi"
                },
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            width: 200
                        },
                        legend: {
                            position: 'bottom'
                        }
                    }
                }]
            };



            var chart = new ApexCharts(document.querySelector("#orderProductCase"), options);
            chart.render();

        }

        function orderCase(res){
            let orderTypeName=[];
            let orderTypeCount=[];
            res.map(function(item){
                orderTypeName.push(item.orderTypeName),
                orderTypeCount.push(item.orderTypeCount)
            })

            var options = {
                series: orderTypeCount,
                chart: {
                    width: 450,
                    type: 'donut',
                    dropShadow: {
                        enabled: true,
                        color: '#111',
                        top: -1,
                        left: 3,
                        blur: 3,
                        opacity: 0.2
                    }
                },
                stroke: {
                    width: 0,
                },
                plotOptions: {
                    pie: {
                        donut: {
                            labels: {
                                show: true,
                               
                                total: {
                                   
                                    showAlways: false,
                                    show: true
                                }
                            }

                        }
                    }
                },
                labels: orderTypeName,
                dataLabels: {
                    dropShadow: {
                        blur: 3,
                        opacity: 0.8
                    }
                },
                fill: {
                    type: 'pattern',
                    opacity: 1,
                    pattern: {
                        enabled: true,
                        style: ['verticalLines', 'squares', 'horizontalLines', 'circles', 'slantedLines'],
                    },
                },
                states: {
                    hover: {
                        filter: 'none'
                    }
                },
                theme: {
                    palette: 'palette2'
                },
                title: {
                    text: "Tüm Siparişlerin Durum Bilgisi"
                },
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            width: 200
                        },
                        legend: {
                            position: 'bottom'
                        }
                    }
                }]
            };

            

            var chart = new ApexCharts(document.querySelector("#orderCase"), options);
            chart.render();

        }

        function orderChart(res){
            let date=[];
            res.map(function (item) {
                var a = `${item.dateCraeted.day}-${item.dateCraeted.month}-${item.dateCraeted.year}`

              
                date.push(a);
                

            });

            var options = {
                series: [{
                    name: 'Toplam Sipariş Adeti',
                    type: 'column',
                    data: res.map(function(item){
                        return item.orderCount;
                    })
                }, {
                    name: 'Toplam Sipariş Tutarı',
                    type: 'line',
                    data: res.map(function(item){
                        return item.totalAmaunt;
                    })
                }],
                chart: {
                    height: 350,
                    type: 'line',
                },
                stroke: {
                    width: [0, 4]
                },
                title: {
                    text: 'Oluşturulan Tüm Sipariş Özeti'
                },
                dataLabels: {
                    enabled: true,
                    enabledOnSeries: [1]
                },
                labels:date,
                xaxis: {
                    type: 'string',
                },
                yaxis: [{
                    title: {
                        text: 'Sipariş Adet',
                    },

                }, {
                    opposite: true,
                    title: {
                        text: 'Siparişlerin Toplam Tutarları'
                    }
                }]
            };

            var chart = new ApexCharts(document.querySelector("#order"), options);
            chart.render();
        }

       
    </script>
}